function display(obj)
{
	var obj2="three";
	var d=document.getElementById(obj).style;
	var s=document.getElementById(obj2).style;
	
	s.zIndex="0";
	s.zIndex="10";
	
	obj2=document.getElementbyId().id;

}
</script>
